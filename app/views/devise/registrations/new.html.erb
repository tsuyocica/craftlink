<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><br />
    <%= f.text_field :name, required: true %>
    <%= error_message_for(resource, :name) %>
  </div>

  <div class="field">
    <%= f.label :role, "役割（依頼者 / 作業員）" %><br />
    <%= f.select :role, [["依頼者", "owner"], ["作業員", "worker"]], prompt: "選択してください", required: true %>
    <%= error_message_for(resource, :role) %>
  </div>

  <div class="field">
    <%= f.label :experience, "経験・スキル" %><br />
    <%= f.text_area :experience, required: true %>
    <%= error_message_for(resource, :experience) %>
  </div>

  <div class="field">
    <%= f.label :qualification, "資格（任意）" %><br />
    <%= f.text_field :qualification %>
    <%= error_message_for(resource, :qualification) %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
    <%= error_message_for(resource, :email) %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
    <%= error_message_for(resource, :password) %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
    <%= error_message_for(resource, :password_confirmation) %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>